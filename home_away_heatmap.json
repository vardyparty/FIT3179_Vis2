{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Which Games Draw The Largest Attendances?",
  "width": 60,
  "height": 40,
  "data": {
    "url": "https://raw.githubusercontent.com/vardyparty/FIT3179_Vis2/main/games.csv"
  },
  "encoding": {
    "x": {"field": "Away Team"},
    "y": {"field": "Home Team"},
    "color": {"field": "Attendance", "aggregate": "average"},
    "tooltip": [
      {"field": "Home Team", "type": "nominal"},
      {"field": "Away Team", "type": "nominal"},
      {
        "field": "Attendance",
        "type": "quantitative",
        "title": "Average Attendance",
        "aggregate": "average"
      }
    ]
  },
  "mark": {"type": "bar", "tooltip": {"content": "data"}},
  "config": {}
}
